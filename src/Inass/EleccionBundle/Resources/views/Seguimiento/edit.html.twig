{% extends "::appLayout.html.twig" %}


{% block content %}
<div id="app-form">
<h1>Editar Seguimiento</h1>

<form action="{{ path('seguimiento_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Editar</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('seguimiento') }}">
            Listado
        </a>
    </li>
    {% if is_granted('ROLE_ADMIN') %}
    <li>
        <form action="{{ path('seguimiento_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>
    {% endif %}
</ul>
</div>
{% endblock %}