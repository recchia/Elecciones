{% extends "::appLayout.html.twig" %}


{% block content %}
<h1>Lista de Seguimientos</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Votos</th>
            <th>Fecha</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('seguimiento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.votos }}</td>
            <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('seguimiento_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('seguimiento_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('seguimiento_new') }}">
            Registrar Nuevo
        </a>
    </li>
</ul>
{% endblock %}