{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('css/appLayout.css') }}" />
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('css/forms.css') }}" />
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('css/tables.css') }}" />
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('css/styles/kendo.common.min.css') }}" />
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('css/styles/kendo.default.min.css') }}" />
    <!--[if IE]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    <!--[if lte IE 6]><link rel="stylesheet" href="{{ asset('css/style_ie.css') }}" type="text/css" media="screen, projection" /><![endif]-->
{% endblock %}

{% block body %}
<div id="wrapper">

    <header id="header">
        
    </header><!-- #header-->
    <nav>
        {% if is_granted('ROLE_USER') %}
        <ul id="miMenu">
            <li>
                Menú Principal
                <ul>
                    <li><a href="{{ path("homepage") }}">Pantalla Principal</a></li>
                    <li><a href="{{ path("fos_user_change_password") }}">Cambiar Contraseña</a></li>
                    <li><a href="{{ path("fos_user_security_logout") }}">Salir del Sistema</a></li>
                </ul>
            </li>
            <li>
                Empleados
                <ul>
                    <li><a href="{{ path("empleado") }}">Listar Empleados</a></li>
                    <li><a href="{{ path("reporte_empleados") }}">Reporte Empleados</a></li>
                </ul>
            </li>
            <li>
                Adultos
                <ul>
                    <li><a href="{{ path("seguimiento") }}">Listar Seguimientos</a></li>
                    <li><a href="{{ path("seguimiento_new") }}">Nuevo Seguimiento</a></li>
                </ul>
            </li>
            <li>
                Novedades
                <ul>
                    <li><a href="{{ path("novedad") }}">Listar Novedades</a></li>
                    <li><a href="{{ path("novedad_new") }}">Nueva Novedad</a></li>
                </ul>
            </li>
            {% if is_granted('ROLE_ADMIN') %}
            <li>
                Administración
                <ul>
                    <li><a href="{{ path("estado") }}">Lista de Estados</a></li>
                </ul>
            </li>
            {% endif %}
        </ul>
        {% else %}
        <ul id="miMenu">
            <li>
                Menú Principal
                <ul>
                    <li><a href="{{ path("fos_user_security_login") }}">Ingresar</a></li>
                    <li><a href="{{ path("fos_user_resetting_request") }}">Recuperar Contraseña</a></li>
                </ul>
            </li>
        </ul>
        {% endif %}
    </nav>

    <div id="content">
        {% block content %}{% endblock %}
    </div><!-- #content-->

    </div><!-- #wrapper -->

    <footer id="footer">
        <strong>INASS 2012</strong> Todos los derechos reservados.
    </footer><!-- #footer -->
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/kendo/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/kendo/kendo.web.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/kendo/cultures/kendo.culture.es-VE.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/funciones.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $("#miMenu").kendoMenu();
        });
    </script>
{% endblock %}
